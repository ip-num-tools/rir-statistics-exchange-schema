{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "RIR Statistics Exchange",
  "description": "JSON Schema for RIR Statistics Exchange",
  "definitions": {
      "rir": {
          "type":"string",
          "enum": ["afrinic", "apnic", "arin", "iana", "lacnic", "ripencc"]
      },
      "resource_type": {
          "type":"string",
          "enum": ["asn","ipv4","ipv6"]
      },
      "status": {
        "type":"string",
        "enum": ["allocated","assigned"]
      },
      "record_entry": {
      "type": "array",
        "items": {
          "type":"object",
          "additionalProperties": true,
          "properties": {
            "country_code": {"type":"string", "minLength":2,"maxLength":2},
            "date": {"type": "string", "format":"full-date"},
            "status": {"$ref": "#/definitions/status"},
            "opaque_id": {"type":"string"},
            "resource": {
              "type":"object",
              "additionalProperties": false,
              "properties": {
                "type":{"$ref": "#/definitions/resource_type"},
                "first_address": {
                  "anyOf": [
                    {"type":"string","format":"ipv4"},
                    {"type":"string","format":"ipv6"},
                    {"type":"string","pattern":"^[0-9]+$"}
                  ]
                },
                "prefix": {"type":"string"},
                "count": {"type":"number"}
              },
              "required":["type","first_address","count"]
            }
          },
          "required":["status","resource"]
        }
    }
  },

  "type": "object",
  "additionalProperties": false,
  "properties": {
    "meta": {
        "type":"object",
        "additionalProperties": false,
        "properties": {
            "source": {
                "type":"array",
                "items": {
                    "type":"object",
                    "additionalProperties": false,
                    "properties": {
                        "url": {"type":"string"},
                        "signature": {"type":"string"}
                    },
                    "required":["url", "signature"]
                }
            }
        }
    },
    "version": { "type": "number" },
    "registry": {"$ref": "#/definitions/rir"},
    "serial_number": { "type": "integer" },
    "record_count": { "type": "integer" },
    "start_date": {"type": "string", "format":"full-date"},
    "end_date": {"type": "string", "format":"full-date"},
    "rir_utc_offset": {"type": "string", "format":"time-numoffset"},
    "resource_count" : {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "asn": { "type": "integer" },
            "ipv4": { "type": "integer" },
            "ipv6": { "type": "integer" }
        },
        "required": ["asn","ipv4","ipv6"]
    },
    "records": {
      "type":"object",
      "additionalProperties": false,
      "minProperties": 1,
      "maxProperties": 6,
      "properties": {
        "afrinic": {"$ref": "#/definitions/record_entry"},
        "apinic": {"$ref": "#/definitions/record_entry"},
        "arin": {"$ref": "#/definitions/record_entry"},
        "iana": {"$ref": "#/definitions/record_entry"},
        "lacnic": {"$ref": "#/definitions/record_entry"},
        "ripencc": {"$ref": "#/definitions/record_entry"}
      }
    }
  },
  "required": ["version","registry","serial_number","record_count","start_date","end_date","rir_utc_offset","resource_count","records"]
}